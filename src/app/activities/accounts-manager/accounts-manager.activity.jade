ts-accounts-manager-toolbar

ts-network-list(networks="$ctrl.networks")

.ts-accounts-manager__account-list
  ts-listview(
    items="$ctrl.accounts"
  )
    ts-button(
      title="{{$parent.item.name}}"
    )

.ts-accounts-manager__empty-state(
  ng-if="!$ctrl.accounts"
)
  ts-empty-state(
    title="You have no attached accounts yet",
    subtitle="Please select the preferred social network"
  )
